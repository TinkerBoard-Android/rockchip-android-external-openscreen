config("compiler_defaults") {
  cflags = [ "-std=c++11" ]
  if (current_os == "linux") {
    cflags += [
      "-fPIC",
      "-fvisibility=hidden",
    ]
    ldflags = [
      "-pthread",
    ]
  }
}

config("executable_ldconfig") {
  ldflags = [
    "-Wl,-rpath=\$ORIGIN/",
    "-Wl,-rpath-link=",
  ]
}
