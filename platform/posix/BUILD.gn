    defines = [
      # Required, to use the new IPv6 Sockets options introduced by RFC 3542.
      "__APPLE_USE_RFC_3542",
    ]
  }

  sources = [
    "error.cc",
    "event_waiter.cc",
    "logging.cc",
    "socket.cc",
    "socket.h",
  ]

  deps = [
    "../api",
  ]
}
